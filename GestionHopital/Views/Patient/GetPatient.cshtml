<!-- Ajoutez une colonne pour afficher les anciennes valeurs -->
<th scope="col">Anciennes Valeurs</th>

@foreach (var patient in Model)
{
    <tr>
        <td>@patient.PatientID</td>
        <td>@patient.Name</td>
        <td>@patient.Phone</td>
        <td>@patient.Address</td>
        <td>@patient.BirthDate.ToString("dd/MM/yyyy")</td>
        <td>@patient.Gender</td>
        <td>@Html.ActionLink("Edit","EditPatient",new{PatientID =patient.PatientID})</td>
        <td>@Html.ActionLink("Delete","DeletePatient",new{id =patient.PatientID})</td>

        <!-- Ajoutez une colonne avec un lien vers les anciennes valeurs -->
        <td>@Html.ActionLink("Anciennes Valeurs", "GetPatient", new { id = patient.PatientID })</td>
    </tr>
}
