@using System.Xml.Linq
@model GestionHopital.Models.Doctor

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit Doctor</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="EditDoctor" enctype="multipart/form-data">
            <div>
                <a asp-action="GetDoctor">Back to List</a>
            </div>
            <div class="card-body">
                <div class="form-group">
                   
                    <input asp-for="DoctorID" class="form-control" type="hidden" />
                    
                </div>
                <div class="form-group">
                    <label for="inputName" asp-for="Name">Doctor Name</label>
                    <input type="text" id="inputName" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="inputName" asp-for="Phone">Phone</label>
                    <input type="text" id="inputName" class="form-control" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label for="inputName" asp-for="Address">Address</label>
                    <input type="text" id="inputName" class="form-control" asp-for="Address">
                </div>

                <div class="form-group">
                    <label for="BirthDate" asp-for="BirthDate">Select your birthdate:</label>
                    <input class="form-control" type="date" id="BirthDate" name="birthdate" asp-for="BirthDate">
                </div>

                <div class="form-group">
                    <label for="inputName" asp-for="Gender">Gender</label>
                    <select name="Gender" class="form-control" asp-for="Gender">
                        <option value="" disabled>Select one</option>

                        <option value="M">Male</option>
                        <option value="F">Female</option>

                    </select>
                </div>
                <div class="form-group">

                    <div class="col-sm-6">
                        <!-- select -->
                        <div class="form-group">
                            <label asp-for="DeptNo">Select DeptNo</label>
                            <select   class="form-control" asp-for="DeptNo">
                                <option value="">Select one</option>
                                @foreach (var department in (List<Department>)ViewData["departement"])
                                {

                                    <option value="@department.DeptNo" selected="@(department.DeptNo==Model.DeptNo ? true:false)"> @department.DeptName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" asp-for="Specialization">Specialization</label>
                    <input type="text" id="inputName" class="form-control" asp-for="Specialization">
                </div>
                <div class="form-group">
                    <label for="inputDescription" asp-for="Qualification">Qualification Description</label>
                    <textarea id="inputDescription" class="form-control" rows="4" asp-for="Qualification"></textarea>
                </div>
                <div class="form-group">
                    <label for="inputStatus" asp-for="Status">Status</label>
                    <select id="inputStatus" class="form-control custom-select" asp-for="Status">
                        <option value="" disabled>Select one</option>

                        <option value="0">Canceled</option>
                        <option value="1">Success</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile" asp-for="img">File input</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="img" asp-for="img">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" asp-validation-for="img">Upload</span>
                        </div>
                    </div>
                    <span asp-validation-for="img" class="text-danger"></span>
                </div>
            </div>
            <!-- /.card-body -->
            <
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>
