@using System.Xml.Linq
@model GestionHopital.Models.OtherStaff
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Secretary</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" asp-action="CreateSecretary" enctype="multipart/form-data">
            <div>
                <a asp-action="GetDepartment">Back to List</a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="DeptName" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Phone</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="DeptName" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Address" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designation">Designation</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="DeptName" asp-for="Designation">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender">Gender</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Gender" asp-for="Gender">
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="birthdate" sp-for="BirthDate">Select your birthdate:</label>
                    <input class="form-control" type="date" id="birthdate" name="birthdate " sp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <!-- select -->
                    <div class="form-group">
                        <label asp-for="DoctorID">Select DocterNo</label>
                        <select name="departement" class="form-control" asp-for="DoctorID">
                            <option value="">Select one</option>
                            @foreach (var doctor in (List<Doctor>)ViewData["doctor"])
                            {
                                <option>@doctor.DoctorID</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for=" Highest_Qualification"> Highest Qualification</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Gender" asp-for=" Highest_Qualification">
                    <span asp-validation-for=" Highest_Qualification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for=" Salary"> Salary</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Gender" asp-for=" Salary">
                    <span asp-validation-for=" Salary" class="text-danger"></span>
                </div>
               

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>
