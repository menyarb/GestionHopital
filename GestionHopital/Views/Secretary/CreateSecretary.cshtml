 @model GestionHopital.Models.OtherStaff

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "CreateDepartment";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> Create Secretary</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" asp-action="CreateSecretary" enctype="multipart/form-data">
            <div>
                <a asp-action="GetSecretary">Back to List</a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="user.Name">Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Name" asp-for="user.Name">
                    <span asp-validation-for="user.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.Email">Email</label>
                    <input type="text" class="form-control" id="Email" placeholder="Email" asp-for="user.Email">
                    <span asp-validation-for="user.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.Phone">Phone</label>
                    <input type="text" class="form-control" id="Phone" placeholder="Phone" asp-for="user.Phone">
                    <span asp-validation-for="user.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.Address">Address</label>
                    <input type="text" class="form-control" id="Address" placeholder="Address" asp-for="user.Address">
                    <span asp-validation-for="user.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.BirthDate"></label>
                    <input asp-for="user.BirthDate" class="form-control" />
                    <span asp-validation-for="user.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="inputName" asp-for="user.Gender">Gender</label>
                    <select name="user.Gender" class="form-control" asp-for="user.Gender">
                        <option value="" disabled selected>Select one </option>

                        <option value="M">Male</option>
                        <option value="F">Female</option>

                    </select>
                </div>
                

                <div class="form-group">
                    <label asp-for="Designation">Designation</label>
                    <input type="text" class="form-control" id="Designation" placeholder="Designation" asp-for="Designation">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Highest_Qualification">Highest Qualification</label>
                    <input type="text" class="form-control" id="Highest_Qualification" placeholder="Highest_Qualification" asp-for="Highest_Qualification">
                    <span asp-validation-for="Highest_Qualification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary">Salary</label>
                    <input type="text" class="form-control" id="Salary" placeholder="Salary" asp-for="Salary">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <div class="col-sm-6">
                        <!-- select -->
                        <div class="form-group">
                            <label asp-for="DoctorID">Select Name Doctor</label>
                            <select class="form-control" asp-for="DoctorID">
                                <option value="">Select one</option>
                                @foreach (var doctor in (List<Doctor>)ViewData["doctor"])
                                {
                                    <option value="@doctor.DoctorID">@doctor.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="user.Password">Password</label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="user.Password">
                    <span asp-validation-for="user.Password" class="text-danger"></span>
                </div>


            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>



