@model List<OtherStaff>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "OtherStaff";
}

<!-- /.card -->
<div class="row">
    <div class="col-12" style="margin: 10px;">
        <a href="#" class="btn btn-secondary">Cancel</a>
        <a asp-area="" asp-controller="Secretary" asp-action="CreateSecretary">
            <input type="submit" value="Create new Secretary" class="btn btn-success float-right">
        </a>
    </div>
</div>

<!-- ... (previous HTML code) ... -->

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Secretary</h3>
    </div>


    <!-- /.card-header -->

    <div class="card-body">
        <table id="SecretaryTable" class="table table-responsive table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>BirthDate</th>
                    <th>Gender</th>
                    <th>Designation</th>
                    <th>Highest Qualification</th>
                    <th>Role</th>
                  
                    <th>Salary</th>
                    <th>Name Doctor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var secretary in Model)
                {
                    <tr>

                        <td>@secretary.StaffID</td>
                        <td>@secretary.user.Name</td>
                        <td>@secretary.user.Email</td>
                        <td>@secretary.user.Phone</td>
                        <td>@secretary.user.Address</td>
                        <td>@secretary.user.BirthDate</td>
                        <td>@secretary.user.Gender</td>
                        <td>@secretary.Designation</td>
                        <td>@secretary.Highest_Qualification</td>
                        <td>@secretary.user.role.RoleName</td>

                        <td>@secretary.Salary</td>
                        <td>@secretary.Doctor?.Name</td>
                        
                   
                        <td>
                            @Html.ActionLink("Edit", "EditSecretary", new { StaffID = secretary.StaffID })
                            @Html.ActionLink("Delete", "DeleteSecretary", new { StaffID = secretary.StaffID })
                            @Html.ActionLink("Details", "DetailsSecretary", new { StaffID = secretary.StaffID })
                        </td>



                    </tr>
                }
            </tbody>
            <tfoot>
                <!-- Add footer if needed -->
            </tfoot>
        </table>
    </div>

    <!-- /.card-body -->
</div>
